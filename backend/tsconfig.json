{
  "compilerOptions": {
    "target": "ESNext",
    "module": "esnext",
    "rootDir": "./src",
    "moduleResolution": "node",
    "types": ["node"],
    "sourceMap": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": ["src/**/*.ts", "tests/helpers/log-if-failed.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
